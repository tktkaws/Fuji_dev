                  <dd class="c-definition__desc">営業経験3年以上</dd>
                </div>
              </dl>
            </div>
            <div class="p-recruit-desc__btn-wrapper">
              <button class="p-recruit-desc__btn">
                <a href=""> エントリー </a>
              </button>
            </div>
          </div>
        </section>
        <section class="p-recruit-form">
          <button class="p-recruit-form__btn">
            <a href="">
              <div class="p-recruit-form__inner">
                <div class="p-recruit-form__text-left">
                  <h3 class="p-recruit-form__title">
                    Entry form
                    <br />
                    <span>エントリーフォーム</span>
                  </h3>
                </div>
                <div class="p-recruit-form__text-right">
                  <div class="c-desc__link-text">View More</div>
                  <div class="c-arrow c-arrow--round"></div>
                </div>
              </div>
            </a>
          </button>
          <figure class="p-recruit-form__image">
            <img src="<%= path %>assets/images/recruit/form_bg.jpg" alt="" />
          </figure>
        </section>
      </main>
      <!-- /main -->
      <%- include('../common/_subFooter', {pageId:pageId }) %> <%-
      include('../common/_footer', {pageId:pageId }) %>
      <%-include('../common/_script', {pageId:pageId }) %> <%-
